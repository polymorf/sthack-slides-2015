msc {
  width="640";

  message  [label="信息", linecolor="#008800", textbgcolor="#CCFFCC",
            arclinecolor="#008800"],
  sequence [label="序", linecolor="#FF0000", textbgcolor="#FFCCCC",
            arclinecolor="#FF0000"],
  chart    [label="圖", linecolor="#0000FF", textbgcolor="#CCCCFF",
            arclinecolor="#0000FF"];

  sequence note chart 
    [label="注解 ('zhùjiě') (note/ annotation): \n
     序 ('xù') is a Chinese character meaning 'sequence' or 'order'.\n
     圖 ('tú') is a character used for 'map', 'chart' or 'diagram'.\n 
     序列圖 ('Xùliè tú') - sequence diagram", linecolor="black",
     textbgcolor="#FFFFCC"];
    
  message =>> sequence 
    [label="信息 ('xìnxī') - message"];
  
  sequence => chart 
    [label="發 ('fā') - send,\nissue or delegate"];
  
  chart =>> chart 
    [label="本身 - self"],
  sequence box sequence 
    [label="箱 ('xiāng') - box", linecolor="black",
     textbgcolor="white"];
  
  chart >> sequence 
    [label="回复 ('huífù') - reply"];
  
  message << sequence 
    [label="砂光機 ('Shā guāng jī')"];
}
