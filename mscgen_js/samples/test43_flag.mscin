msc {
  arcgradient="40";
  a [label="Sonnet XVIII"],
  b [label="William\nShakespeare"],
  d [textbgcolor="orange", label="1609", 
     textcolor="yellow", linecolor="orange"];
  
  a note d [textbgcolor="red", linecolor="darkred",  
     textcolor="orange",
     label="Shall I compare thee to a summer's day?\n
            Thou art more lovely and more temperate;\n
            Rough winds do shake the darling buds of May,\n
            And summer's lease hath all too short a date;"];

  a box d [textbgcolor="white", linecolor="lightgrey",
     label="Sometime too hot the eye of heaven shines,\n
            And often is his gold complexion dimm'd;\n
            And every fair from fair sometime declines,\n
            By chance or nature's changing course untrimm'd;"];
  a box d [textbgcolor="blue", linecolor="darkblue", textcolor="cyan",
     label="But thy eternal summer shall not fade,\n
            Nor lose possession of that fair thou ow'st;\n
            Nor shall Death brag thou wander'st in his shade,\n
            When in eternal lines to time thou grow'st:"];
  ||| [label="So long as men can breathe or eyes can see,\n
            So long lives this, and this gives life to thee."];
}